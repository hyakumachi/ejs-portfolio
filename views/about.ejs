<%- include('partials/header') %> <%- include('partials/navbar') %>

<main class="main-content">
  <div class="container">
    <!-- About Section -->
    <div class="about-container">
      <div class="about-text">
        <h1 class="about-name"><%= data.name %></h1>
        <p class="about-role"><%= data.role %></p>
      </div>
      <div class="about-img">
        <img src="/images/pfp.jpg" alt="Profile" class="profile-img" />
      </div>
    </div>

    <div class="about-links">
      <a
        href="/resume.pdf"
        target="_blank"
        class="resume-btn"
        aria-label="Download Resume"
      >
        <i class="fas fa-download"></i>
        Resume
      </a>
      <% data.socials.forEach(social => { %>
      <a
        href="<%= social.url %>"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="<%= social.name %>"
      >
        <i class="<%= social.icon %>"></i>
      </a>
      <% }); %>
    </div>

    <div class="about-description">
      <h2>
        <span class="intro intro-bold"><%= data.description.bold %></span>
        <span class="intro intro-normal"><%= data.description.normal %></span>
      </h2>
    </div>

    <!-- Tech Stack Section -->
    <h2 class="title">Tech Stack</h2>
    <p class="desc">
      A selection of modern tools that I use to build scalable, high-quality web
      applications.
    </p>
    <div class="stack-icons">
      <div class="tech-card react-icon">
        <div class="tech-icon">
          <img src="/images/react-icon.svg" alt="React" />
        </div>
        <div class="tech-name">React</div>
      </div>
      <div class="tech-card typescript-icon">
        <div class="tech-icon">
          <img src="/images/ts-icon.svg" alt="TypeScript" />
        </div>
        <div class="tech-name">TypeScript</div>
      </div>
      <div class="tech-card tailwind-icon">
        <div class="tech-icon">
          <img src="/images/tailwind-icon.svg" alt="Tailwind CSS" />
        </div>
        <div class="tech-name">Tailwind CSS</div>
      </div>
      <div class="tech-card mysql-icon">
        <div class="tech-icon">
          <img src="/images/mysql-logo.png" alt="MySQL" />
        </div>
        <div class="tech-name">MySQL</div>
      </div>
      <div class="tech-card nestjs-icon">
        <div class="tech-icon">
          <img src="/images/nestjs-icon.svg" alt="NestJS" />
        </div>
        <div class="tech-name">NestJS</div>
      </div>
    </div>
    <!-- Experience Section -->
    <h2 class="title">Experience</h2>
    <p class="desc">My educational and professional journey in technology.</p>
    <% data.experience.forEach(exp => { %>
    <div class="featured-card">
      <div class="experience-pic">
        <img src="<%= exp.image %>" alt="<%= exp.title %>" />
      </div>
      <div class="event-info">
        <div class="event-date"><%= exp.period %></div>
        <div class="event-name"><%= exp.title %></div>
        <div class="event-desc experience-role-text"><%= exp.role %></div>
      </div>
    </div>
    <% }); %>
    <!-- Featured Projects Section -->
    <div class="featured-projects-header">
      <h2 class="title featured-projects-title">Featured Projects</h2>
      <a href="/projects" class="all-projects-link">All Projects</a>
    </div>
    <p class="desc">
      Showcasing web projects that highlight my skills in design, development,
      and problem-solving using various technologies.
    </p>

    <% data.projects.slice(0, 2).forEach(project => { %>
    <div class="featured-card">
      <div class="event-info">
        <div class="event-date"><%= project.date %></div>
        <div class="event-name"><%= project.name %></div>
        <div class="event-stack-row">
          <% project.stack.forEach(tech => { %>
          <div class="event-stack"><%= tech %></div>
          <% }); %>
        </div>
        <div class="event-desc"><%= project.description %></div>
        <div class="event-buttons">
          <a
            class="event-btn"
            href="<%= project.source %>"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-github"></i>
            Source Code
          </a>
          <% if (project.demo) { %>
          <a
            class="event-btn"
            href="<%= project.demo %>"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fas fa-globe"></i>
            Live Demo
          </a>
          <% } %>
        </div>
      </div>
      <div class="event-pic">
        <img src="<%= project.img %>" alt="<%= project.name %>" />
      </div>
    </div>
    <% }); %>

    <!-- Contact Section -->
    <div class="contact-wrapper">
      <h2 class="title">Connect with me</h2>
      <p class="desc">Feel free to reach out on any of the platforms below.</p>
    </div>

    <div class="contact-wrapper">
      <a href="mailto:pacanza.berns4884@gmail.com" class="mail-card-link">
        <div class="mail-card-inner">
          <i class="fas fa-envelope mail-icon"></i>
          <div>
            <div class="mail-label">Mail me</div>
            <div class="mail-link">pacanza.berns4884@gmail.com</div>
          </div>
        </div>
      </a>

      <div class="contact-or">or</div>

      <div class="contact-icons-row">
        <% data.socials.forEach(social => { %>
        <a
          href="<%= social.url %>"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="<%= social.name %>"
          class="contact-social-btn"
        >
          <i class="<%= social.icon %>"></i>
        </a>
        <% }); %>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
